model Attendance {
  id        String           @id @default(uuid())
  userId    String
  classId   String?
  status    AttendanceStatus
  inTime    DateTime?
  outTime   DateTime?
  notedBy   String
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id])
  class Class? @relation(fields: [classId], references: [id])

  @@unique([id, createdAt])
  @@map("attendance")
}
